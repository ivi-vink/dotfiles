[ -d .git ] && git status --porcelain=v1 | {
	while read tag file; do
		case $tag in
		M) modified=$(( modified + 1));;
		?*) untracked=$(( untracked + 1));;
		esac ;
	done;
	printf '%s' " git($(git branch --show-current)"
	[ 0 -lt "${modified:-0}" ] && printf '%s' ":M$modified"
	[ 0 -lt "${untracked:-0}" ] && printf '%s' "|?$untracked"
	echo ")"
}
